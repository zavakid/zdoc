<!DOCTYPE html>
<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ -->
<!--[if lt IE 7]> <html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="en"> <![endif]-->
<!--[if IE 7]>    <html class="no-js lt-ie9 lt-ie8" lang="en"> <![endif]-->
<!--[if IE 8]>    <html class="no-js lt-ie9" lang="en"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
<head>
  <meta charset="utf-8" />
  <!-- Set the viewport width to device width for mobile -->
  <meta name="viewport" content="width=device-width" />
  <meta name="author" content="{{ site.author.name }}"> 

  <title>{{ site.name }}</title>
  {% assign base =  site.baseurl | append: site.assets_path %}

  <!-- Included CSS Files (Compressed) -->
  <link rel="stylesheet" href="{{ ASSET_PATH }}/stylesheets/foundation.min.css">
  <link rel="stylesheet" href="{{ ASSET_PATH }}/stylesheets/app.css">

  <script src="{{ ASSET_PATH }}/javascripts/modernizr.foundation.js"></script>
</head>
<body>

  <!-- Nav Bar -->
  <div class="row">
    <div class="twelve columns">
      <h1>{{ site.title }}<small>{{ site.tagline }}</small></h1>
      <ul class="nav-bar">
        {% assign pages_list = site.pages %}
        {% assign group = 'navigation' %}
        {% include JB/pages_list %}
      </ul>
      <hr />

    </div>
  </div>
  <!-- End Nav -->

  <!-- Main Page Content and Sidebar -->
  <div class="row">

    <!-- Main Blog Content -->
    <div class="nine columns" role="content">
      {{  content }}
    </div>

    <!-- End Main Content -->


    <!-- Sidebar -->
    <aside class="three columns">
      <h5>Categories</h5>
      <ul class="side-nav">
        <li><a href="#">News</a></li>
        <li><a href="#">Code</a></li>
        <li><a href="#">Design</a></li>
        <li><a href="#">Fun</a></li>
        <li><a href="#">Weasels</a></li>
      </ul>
      <div class="panel">
        <h5>Featured</h5>
        <p>Pork drumstick turkey fugiat. Tri-tip elit turducken pork chop in. Swine short ribs meatball irure bacon nulla pork belly cupidatat meatloaf cow.</p>
        <a href="#">Read More &rarr;</a>
      </div>
    </aside>

    <!-- End Sidebar -->
  </div>
  <!-- End Main Content and Sidebar -->


  <!-- Footer -->
  <footer class="row">
    <div class="twelve columns">
      <hr />
      <div class="row">
        <div class="six columns">
          <p>&copy; {{ site.author.name }}, powered by jekyll and jekyllbootstrap</p>
        </div>
        <div class="six columns">
          <ul class="link-list right">
            {% assign pages_list = site.pages %}
            {% assign group = 'navigation' %}
            {% include JB/pages_list %}
          </ul>
        </div>
      </div>
    </div>
  </footer>

  <!-- End Footer -->

  <!-- Included JS Files (Compressed) -->
  <script src="{{ ASSET_PATH }}/javascripts/jquery.js"></script>
  <script src="{{ ASSET_PATH }}/javascripts/foundation.min.js"></script>
  <script src="{{ ASSET_PATH }}/javascripts/app.js"></script>
  {% include JB/analytics %}
</body>
</html>
